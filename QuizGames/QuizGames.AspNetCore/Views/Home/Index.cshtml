@using QuizGames.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Home";
}
<body>
    <br />
   @using (Html.BeginForm("Index", "Home", FormMethod.Post)){
        <div class="loginwrapper">
            <div class="logincontainer">
                <form class="login-form">
                    <div class="fitextfield">
                        <label for="uname"><b>Gebruikersnaam</b></label>
                        @Html.TextBoxFor(m => m.Login, new { id = "tbUname" })
                    </div>
                    <div class="fipassfield">
                        <label for="psw"><b>Wachtwoord</b></label>
                        @Html.PasswordFor(m => m.Pass, new { id = "tbPsw" })
                        <br />
                        <br />
                        <input id="loginButton" type="button" value="Log In">
                    </div>
                </form>
            </div>
        </div>
    }
</body>
