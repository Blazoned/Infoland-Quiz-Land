@model QuizGames.AspNetCore.ViewModels.GameModeViewModel


@{
    ViewData["Title"] = "Camelrace";
}

<body>
    <div class="NavBar">
        <img src=https://lh3.ggpht.com/A0x3jzuH1qRkE10HcTiT4qQr_6iAqVg-CTsoIqxnoIFyv92V91WI3KqiVlOvLtfoMRg=w300 alt="home" id="homeButton">
        <img id="accountButton" src=https://www.w3schools.com/w3images/avatar5.png alt="account">
    </div>
    <br>
    <br>
    <br>
    <div>
        <h2>Camel Race</h2>
    </div>
    <div>
        <div id="myProgress1">
            <div id="Camelbar1"></div>
            <img id="img1" src=https://www.w3schools.com/howto/img_avatar.png alt="Avatar">
        </div>
        <div id="myProgress2">
            <div id="Camelbar2"></div>
            <img id="img2" src=https://www.w3schools.com/howto/img_avatar2.png alt="Avatar">
        </div>
        <div id="myProgress3">
            <div id="Camelbar3"></div>
            <img id="img3" src=https://www.w3schools.com/howto/img_avatar2.png alt="Avatar">
        </div>
        <div id="myProgress4">
            <div id="Camelbar4"></div>
            <img id="img4" src=https://www.w3schools.com/howto/img_avatar2.png alt="Avatar">
        </div>

        <h3>
            Vraag:<br />
            @Model.Question
        </h3>
    </div>

    <div>

        @using (Html.BeginForm("Giveanswer", "Gamemode"))
        {

            @Html.RadioButtonFor(m => m.ChosenAnwser, Model.RandomAnswers[0])
            @Html.LabelFor(m => m.RandomAnswers[0], Model.RandomAnswers[0])<br />

            @Html.RadioButtonFor(m => m.ChosenAnwser, Model.RandomAnswers[1])
            @Html.LabelFor(m => m.RandomAnswers[1], Model.RandomAnswers[1])<br />

            @Html.RadioButtonFor(m => m.ChosenAnwser, Model.RandomAnswers[2])
            @Html.LabelFor(m => m.RandomAnswers[2], Model.RandomAnswers[2])<br />

            @Html.RadioButtonFor(m => m.ChosenAnwser, Model.RandomAnswers[3])
            @Html.LabelFor(m => m.RandomAnswers[3], Model.RandomAnswers[3])<br />
            <br />

            <input type="submit" value="Antwoorden" />

        }
        @if (Model.ChosenAnwser != null)
        {
            @if (Model.ChosenAnwser == Model.Rightanswer)
            {
                <h2>Dat is: <b>Goed</b></h2>
                <script type="text/javascript">
                    move(Camelbar1, img1);
                </script>


            }
            @if (Model.ChosenAnwser != Model.Rightanswer)
            {
                <h2>Dat is: <b>Fout</b></h2>
                Random rand = new Random();
                int rnd = rand.Next(1, 4);
                if (rnd == 1)
                {
                    <script type="text/javascript">move(Camelbar2, img2);</script>}
                if (rnd == 2)
                {
                    <script type="text/javascript">move(Camelbar3, img3);</script>}
                if (rnd == 3)
                {
                    <script type="text/javascript">move(Camelbar4, img4);</script>}

            }

        }

    </div>

</body>
