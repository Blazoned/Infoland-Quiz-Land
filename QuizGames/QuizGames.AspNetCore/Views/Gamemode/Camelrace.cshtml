@using QuizGames.ViewModels
@model GameModeViewModel
@{
    ViewData["Title"] = "Kamelen Race";
}
<head>
    <script src="~/js/quizScript.js"></script>
    <script src="~/js/race.js"></script>
    <script src="~/js/gameHub.js"></script>
</head>
<body>
    <div class="gamewrapper">
        <div class="Navbar">
            <a href="@Url.Action("Menu", "Menu")" class="homebutton">
                <img src="~/images/homebutton.png" alt="homebutton" class="homebutton">
            </a>
            <img src="~/images/infolandLoGo.png" alt="infoland logo" class="infologo">
            <img src="~/images/img_avatar.png" alt="headshot gebruiker" class="userhs">
        </div>
        
        <div class="camelrace">
            <div class="camelracepoints player1" id="crp1">0</div>
            <div class="camelracebar player1" id="Camelbar1"><img id="img1" src=https://www.w3schools.com/howto/img_avatar.png alt="Avatar"></div>
            <div class="camelracepoints player2" id="crp2">0</div>
            <div class="camelracebar player2" id="Camelbar2"><img id="img2" src=https://www.w3schools.com/howto/img_avatar2.png alt="Avatar"></div>
            <div class="camelracepoints player3" id="crp3">0</div>
            <div class="camelracebar player3" id="Camelbar3"><img id="img3" src=https://www.w3schools.com/howto/img_avatar2.png alt="Avatar"></div>
            <div class="camelracepoints player4" id="crp4">0</div>
            <div class="camelracebar player4" id="Camelbar4"><img id="img4" src=https://www.w3schools.com/howto/img_avatar2.png alt="Avatar"></div>
        </div>

        <div class="questioncontainer" hidden="hidden">
            <div class="cquestion">
                <h2 id="questionlbl">Vraag:</h2>
                <p id="qlbl"></p>
                <br />
            </div>
                <button class="answer" id="canswer1" data-question="" onclick="questionAnswered(this)" disabled></button>
                <button class="answer" id="canswer2" data-question="" onclick="questionAnswered(this)" disabled></button>
                <button class="answer" id="canswer3" data-question="" onclick="questionAnswered(this)" disabled></button>
                <button class="answer" id="canswer4" data-question="" onclick="questionAnswered(this)" disabled></button>
        </div>
        <div>
            <button class="gpbutton" id="gameplaybtn" onclick="startGame()"></button>
        </div>
    </div>
</body>
